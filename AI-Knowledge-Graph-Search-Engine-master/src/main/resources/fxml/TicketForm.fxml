<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.TicketFormController"
      spacing="20" style="-fx-background-color: white;">

    <padding>
        <Insets top="30" bottom="30" left="30" right="30"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="ðŸŽ«" style="-fx-font-size: 32px;"/>
        <VBox>
            <Label text="Create New Ticket" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label text="Fill in the details below" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
        </VBox>
    </HBox>

    <Separator/>

    <!-- Form Fields -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <!-- Title -->
        <VBox spacing="5">
            <Label text="Title *" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtTitle" promptText="Brief description of the issue"
                       style="-fx-padding: 10px; -fx-font-size: 13px;"/>
        </VBox>

        <!-- Description -->
        <VBox spacing="5" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Description *" style="-fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnAnalyzeAI" text="âœ¨ Analyze with AI"
                        onAction="#handleAnalyzeAI"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white;
                              -fx-padding: 6px 12px; -fx-background-radius: 5px;
                              -fx-font-size: 11px; -fx-cursor: hand;"/>
                <ProgressIndicator fx:id="aiProgress" prefWidth="20" prefHeight="20" visible="false"/>
            </HBox>
            <TextArea fx:id="txtDescription" promptText="Detailed description of the issue"
                      prefRowCount="6" wrapText="true"
                      style="-fx-padding: 10px; -fx-font-size: 13px;"/>
            <Label fx:id="lblAIResult" visible="false"
                   style="-fx-background-color: #e8f5e9; -fx-text-fill: #2e7d32;
                          -fx-padding: 10px; -fx-background-radius: 5px; -fx-font-size: 12px;"/>
        </VBox>

        <!-- Priority and Category -->
        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Priority *" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="comboPriority" maxWidth="Infinity"
                          style="-fx-padding: 8px; -fx-font-size: 13px;"/>
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Category *" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="comboCategory" maxWidth="Infinity"
                          style="-fx-padding: 8px; -fx-font-size: 13px;"/>
            </VBox>
        </HBox>

        <!-- Assign To -->
        <VBox spacing="5">
            <Label text="Assign To" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="comboAssignTo" maxWidth="Infinity"
                      style="-fx-padding: 8px; -fx-font-size: 13px;"/>
        </VBox>
    </VBox>

    <Separator/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel"
                styleClass="action-button-secondary" prefWidth="120"/>
        <Button fx:id="btnSave" text="Create Ticket" onAction="#handleSave"
                styleClass="action-button-primary" prefWidth="120"/>
    </HBox>
</VBox>